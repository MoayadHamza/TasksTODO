<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.client.controller.HomePageController"
      spacing="20" style="-fx-padding: 30;">

    <Label fx:id="welcomeLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Welcome, [Username]!" />

    <Label text="Here’s what you can do:" style="-fx-font-size: 14px;" />
    <Label text="- Click a personal project from the sidebar to view and manage your tasks." style="-fx-font-size: 13px;" />
    <Label text="- Select a group from the sidebar to manage shared tasks or members (if you’re an admin)." style="-fx-font-size: 13px;" />
    <Label text="- Visit your account page to view or update your information." style="-fx-font-size: 13px;" />

</VBox>
