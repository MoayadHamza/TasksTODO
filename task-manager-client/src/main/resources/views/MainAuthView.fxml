<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="500" prefWidth="400" spacing="20" style="-fx-padding: 30; -fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.controller.MainAuthController">
   <StackPane>
      <children>

          <!-- Top selector tabs -->
          <HBox alignment="CENTER" minWidth="-Infinity" prefHeight="60.0" prefWidth="320.0" spacing="0" style="-fx-background-color: #d6eaf8; -fx-background-radius: 8;">
              <Label fx:id="loginTab" alignment="CENTER" onMouseClicked="#showLoginView" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-alignment: center; -fx-pref-width: 150; -fx-padding: 12 0; -fx-cursor: hand; -fx-background-radius: 8 0 0 8;" text="Login" textAlignment="CENTER" />
              <Label fx:id="registerTab" alignment="CENTER" onMouseClicked="#showRegisterView" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #85c1e9; -fx-text-fill: white; -fx-alignment: center; -fx-pref-width: 150; -fx-padding: 12 0; -fx-cursor: hand; -fx-background-radius: 0 8 8 0;" text="Register" textAlignment="CENTER" />
          </HBox>
      </children>
   </StackPane>

    <!-- Switchable content -->
    <StackPane fx:id="authPane" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;" VBox.vgrow="ALWAYS" />

</VBox>
